{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "experimentalSortImports": {},
  "experimentalSortPackageJson": true,
  "experimentalTailwindcss": {
    "functions": ["clsx", "cn", "cva", "tw"]
  },
  "ignorePatterns": [
    "dist",
    "src/routeTree.gen.ts",
    "node_modules",
    "test-results/",
    "playwright-report/",
    "blob-report/",
    "dist",
    ".output",
    "**/*.gen.*",
    ".claude/**",
    ".agents/**",
    ".cursor/**",
    ".turbo",
    "**/routeTree.gen.ts",
    "**/bun.lock"
    // "**/_generated/**",
  ]
}
